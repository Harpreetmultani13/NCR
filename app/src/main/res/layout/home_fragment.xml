<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:text="Our Clients"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="true"
        android:textStyle="bold"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="20dp">
            <android.support.v7.widget.CardView
                android:layout_height="175dp"
                android:layout_width="290dp"
                android:layout_margin="3dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/image1"
                    android:src="@drawable/sbi"
                    android:scaleType="fitXY"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="175dp"
                android:layout_width="290dp"
                android:layout_margin="3dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/image2"
                    android:scaleType="fitXY"
                    android:src="@drawable/sukkhi"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="175dp"
                android:layout_width="290dp"
                android:layout_margin="3dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/image3"
                    android:scaleType="fitXY"
                    android:src="@drawable/zoomcar"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="175dp"
                android:layout_width="290dp"
                android:layout_margin="3dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/image4"
                    android:scaleType="fitXY"
                    android:src="@drawable/yesbank"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="175dp"
                android:layout_width="290dp"
                android:layout_margin="3dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/image5"
                    android:scaleType="fitXY"
                    android:src="@drawable/westside"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="175dp"
                android:layout_width="290dp"
                android:layout_margin="3dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/image6"
                    android:scaleType="fitXY"
                    android:src="@drawable/rentomojo"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="175dp"
                android:layout_width="290dp"
                android:layout_margin="3dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/image7"
                    android:scaleType="fitXY"
                    android:src="@drawable/sukkhi"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="175dp"
                android:layout_width="290dp"
                android:layout_margin="3dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/image8"
                    android:scaleType="fitXY"
                    android:src="@drawable/ajio"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="175dp"
                android:layout_width="290dp"
                android:layout_margin="3dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/image9"
                    android:scaleType="fitXY"
                    android:src="@drawable/sbi"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="175dp"
                android:layout_width="290dp"
                android:layout_margin="3dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/image10"
                    android:scaleType="fitXY"
                    android:src="@drawable/zoomcar"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="2"
        android:layout_height="100dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardcareer"
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="120dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="Contact Us"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:id="@+id/cardintern"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="120dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="INTERNSHIP"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="2"
        android:layout_height="100dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:id="@+id/cardblog"
            android:layout_weight="1"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="120dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="BLOG"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:layout_weight="1"
            android:id="@+id/cardfollow"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="120dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="FOLLOW US"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>




    </LinearLayout>
</LinearLayout>