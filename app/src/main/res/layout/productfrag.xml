<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="3dp">
        <android.support.v7.widget.CardView
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            app:cardElevation="10sp"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:id="@+id/cardAdvertising">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:alpha=".85"/>
            <ImageView
                android:layout_height="110dp"
                android:layout_width="110dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="Advertising"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginLeft="44dp"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>
   <LinearLayout
       android:layout_height="match_parent"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:padding="3dp">
       <android.support.v7.widget.CardView
           android:layout_height="150dp"
           android:layout_width="match_parent"
           android:layout_margin="5sp"
           app:cardElevation="10sp"
           app:cardCornerRadius="5dp"
           android:clickable="true"
           android:id="@+id/carddesign">
           <LinearLayout android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:alpha=".85"/>
           <ImageView android:layout_height="110dp"
               android:layout_width="110dp"
               android:layout_margin="20dp"
               android:src="@mipmap/ic_launcher"/>
           <TextView android:layout_height="40dp"
               android:layout_width="match_parent"
               android:text="Design"
               android:layout_marginLeft="29dp"
               android:layout_gravity="center"
               android:textSize="25dp"
               android:textAlignment="center"/>
       </android.support.v7.widget.CardView>
   </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="3dp">
        <android.support.v7.widget.CardView
            android:layout_height="150dp" android:layout_width="match_parent"
            android:layout_margin="5sp"
            app:cardElevation="10sp"
            app:cardCornerRadius="5dp"
            android:clickable="true" android:id="@+id/carddesvelopmet">
            <LinearLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:alpha=".85"/>
            <ImageView android:layout_height="110dp"
                android:layout_width="110dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="Development"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:layout_marginLeft="44dp"
                android:textAlignment="center"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="3dp">
    <android.support.v7.widget.CardView
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:layout_margin="5sp"
        app:cardElevation="10sp"
        app:cardCornerRadius="5dp"
        android:clickable="true" android:id="@+id/cardMarketing">

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:alpha=".85"/>
    <ImageView android:layout_height="110dp"
        android:layout_width="110dp"
        android:layout_margin="20dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView android:layout_height="40dp"
        android:layout_width="match_parent"
        android:text="Marketing"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginLeft="44dp"/>

</android.support.v7.widget.CardView>

</LinearLayout>



</LinearLayout>

    </ScrollView>