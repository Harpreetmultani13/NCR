<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/person"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp" android:text="Our Sevices"
                    android:textStyle="bold" android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:textSize="19sp"/>
            </LinearLayout>
            <View android:layout_height="1dp"
                android:layout_width="320dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>
            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:text="@string/services"
                android:textSize="16sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/person"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp" android:text="Who We Are ?"
                    android:textStyle="bold" android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:textSize="19sp"/>
            </LinearLayout>
            <View android:layout_height="1dp"
                android:layout_width="320dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>
            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:text="@string/who_we_are"
                android:textSize="16sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/person"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp" android:text="Mission"
                    android:textStyle="bold" android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:textSize="19sp"/>
            </LinearLayout>
            <View android:layout_height="1dp"
                android:layout_width="320dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>
            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:text="@string/mission"
                android:textSize="16sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/person"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp" android:text="Why Choose Us ?"
                    android:textStyle="bold" android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:textSize="19sp"/>
            </LinearLayout>
            <View android:layout_height="1dp"
                android:layout_width="320dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>
            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:text="@string/choose"
                android:textSize="16sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
</ScrollView>