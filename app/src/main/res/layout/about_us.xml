<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    app:cardElevation="8dp">
        <LinearLayout
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:padding="5dp">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/questionmark"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"/>


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:typeface="serif"
                    android:textSize="27dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:text="Who We Are ?"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    />
        </LinearLayout>
            <View android:layout_height="1dp"
                android:layout_width="320dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>
            <TextView
                android:text="Required Internet for Data"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:id="@+id/idwho"

                android:typeface="serif"
                android:textSize="14dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:padding="5dp">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/iconmission"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"/>

                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:typeface="serif"
                    android:textSize="27dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:text="Mission"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center" />
        </LinearLayout>
            <View android:layout_height="1dp"
                android:layout_width="320dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:id="@+id/id_mission"
                android:text="Required Internet for Data"
                android:typeface="serif"
                android:textSize="14dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:padding="5dp">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/iconpp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:typeface="serif"
                    android:textSize="27dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:text="Our Sevices"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center" />
        </LinearLayout>

            <View android:layout_height="1dp"
                android:layout_width="320dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>
            <TextView

                android:typeface="serif"
                android:text="Required Internet for Data"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:id="@+id/id_services"
               />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:padding="5dp">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/iconselction"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:typeface="serif"
                    android:textSize="27dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:text="Why Choose Us ?"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center" />
        </LinearLayout>

            <View android:layout_height="1dp"
                android:layout_width="320dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>
            <TextView
                android:text="Required Internet for Data"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:id="@+id/id_choose"
                android:typeface="serif"
                android:textSize="14dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:padding="5dp">
                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/about_us"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:typeface="serif"
                    android:textSize="27dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:text="Developer"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center" />
            </LinearLayout>

            <View android:layout_height="1dp"
                android:layout_width="320dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>
            <TextView

                android:layout_margin="20dp"
                android:typeface="serif"
                android:text="This Application is developed by Er. Geetansh (9813807461)"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"

                />
        </LinearLayout>


    </android.support.v7.widget.CardView>


    <TextView
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:textColor="#ffff"
        android:text="ADCITYMART"
        android:textSize="38dp"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>